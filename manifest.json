{

  "manifest_version": 2,
  "name": "Free Speech Shield",
  "version": "1.1",

  "description": "Basically Newsguard for Free Speech",
  "icons": {
    "48": "shield.png"
  },

  "permissions": [
    "storage",
    "webRequest",
    "tabs"

  ],

  "browser_action": {
    "default_icon": {
     "32" : "shield.png"
    },
    "default_title": "Free Speech Shield",
    "default_popup": "popup/freeSpeechPopup.html"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "quicknote-example@mozilla.org"
    }
  }

}
